<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Favorites - Movie Web</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-dark">
    <%- include('partials/navbar') %>

        <div class="container">
            <h1 class="display-5 text-white mb-4">
                <i class="bi bi-heart-fill text-danger"></i> My Favorite Movies
            </h1>

            <% if (favorites.length===0) { %>
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i> You haven't added any favorites yet.
                </div>
                <% } else { %>
                    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                        <% favorites.forEach(f=> { %>
                            <div class="col">
                                <div class="card h-100 bg-secondary text-white">
                                    <img src="<%= f.movie_poster %>" class="card-img-top" alt="<%= f.movie_title %>"
                                        style="height: 350px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= f.movie_title %>
                                        </h5>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Remove
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>

                        <div class="mt-4">
                            <a href="/" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left"></i> Back Home
                            </a>
                        </div>
        </div>

        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>