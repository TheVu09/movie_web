<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= movie.title %> - Movie Web
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-dark">
    <%- include('partials/navbar') %>

        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= movie.poster %>" class="img-fluid rounded shadow" alt="<%= movie.title %>">
                    <form method="POST" action="/favorite/<%= movie.id %>" class="mt-3 d-grid">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-heart-fill"></i> Add to Favorites
                        </button>
                    </form>
                </div>
                <div class="col-md-8">
                    <h1 class="display-4 text-white mb-3">
                        <%= movie.title %>
                    </h1>

                    <div class="mb-3">
                        <span class="badge bg-warning text-dark fs-5 me-2">
                            <i class="bi bi-star-fill"></i>
                            <%= movie.rating %>
                        </span>
                        <span class="badge bg-info text-dark fs-5">
                            <i class="bi bi-calendar"></i>
                            <%= movie.releaseDate %>
                        </span>
                    </div>

                    <h4 class="text-white-50"><i class="bi bi-camera-video"></i> Trailer</h4>
                    <% if (movie.trailerUrl) { %>
                        <div class="ratio ratio-16x9 mb-3">
                            <iframe src="<%= movie.trailerUrl %>" allowfullscreen></iframe>
                        </div>
                        <% } else { %>
                            <div class="alert alert-secondary" role="alert">
                                <i class="bi bi-camera-video-off"></i> No Trailer Available
                            </div>
                            <% } %>

                                <h4 class="text-white-50">Overview</h4>
                                <p class="lead text-white">
                                    <%= movie.overview %>
                                </p>

                                <hr class="border border-secondary">

                                <h4 class="text-white-50 mb-3">
                                    <i class="bi bi-people-fill"></i> Top Cast
                                </h4>
                                <div class="row row-cols-1 row-cols-md-2 g-3">
                                    <% cast.forEach(actor=> { %>
                                        <div class="col">
                                            <div class="card bg-secondary text-white">
                                                <div class="card-body">
                                                    <h6 class="card-title mb-1">
                                                        <%= actor.name %>
                                                    </h6>
                                                    <p class="card-text text-white-50 mb-0">
                                                        <small>as <%= actor.character %></small>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>

                                <a href="/movie/<%= movie.id%>/watch" class="btn btn-danger btn-lg mt-3">
                                    <i class="bi bi-play-circle-fill"></i> Watch Trailer
                                </a>
                </div>
            </div>

            <div class="mt-4">
                <a href="/" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Back to list
                </a>
            </div>
        </div>

        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>