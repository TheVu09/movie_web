<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Web</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-dark">
    <%- include('partials/navbar') %>

        <div class="container">
            <div class="row mb-4">
                <div class="col-md-8 mx-auto">
                    <form method="GET" action="/">
                        <div class="input-group input-group-lg">
                            <input type="text" name="q" class="form-control" placeholder="Search movies..."
                                value="<%= keyword %>">
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                <% movies.forEach(movie=> { %>
                    <div class="col">
                        <div class="card h-100 bg-secondary text-white">
                            <img src="<%= movie.poster %>" class="card-img-top" alt="<%= movie.title %>"
                                style="height: 350px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/movie/<%= movie.id %>" class="text-decoration-none text-white">
                                        <%= movie.title %>
                                    </a>
                                </h5>
                                <p class="card-text">
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-star-fill"></i>
                                        <%= movie.rating %>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <nav class="mt-5 mb-4">
                <ul class="pagination justify-content-center">
                    <% if (page> 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/?page=<%= page - 1 %><%= keyword ? '&q=' + keyword : '' %>">
                                <i class="bi bi-chevron-left"></i> Previous
                            </a>
                        </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <span class="page-link"><i class="bi bi-chevron-left"></i> Previous</span>
                            </li>
                            <% } %>

                                <li class="page-item active">
                                    <span class="page-link">Page <%= page %> / <%= totalPages %></span>
                                </li>

                                <% if (page < totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link"
                                            href="/?page=<%= page + 1 %><%= keyword ? '&q=' + keyword : '' %>">
                                            Next <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                    <% } else { %>
                                        <li class="page-item disabled">
                                            <span class="page-link">Next <i class="bi bi-chevron-right"></i></span>
                                        </li>
                                        <% } %>
                </ul>
            </nav>
        </div>

        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>